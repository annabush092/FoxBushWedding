<div id="guests-index-container">

    <h2>All RSVPs</h2>

    <table id="guest-table" class="card">
        <thead>
            <tr>
                <th id="name-header">Name</th>
                <th>Ceremony/Reception</th>
                <th>Dinner Choice</th>
                <th>Brunch</th>
                <th>Guest Notes</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @guests.each do |g|%>
                <tr>
                    <td class="name-td"><%= g.name %></td>
                    <td><%= g.attending ? "Y" : "N" %></td>
                    <td><%= g.meal %></td>
                    <td><%= g.brunch ? "Y" : "N" %></td>
                    <td><%= g.notes %></td>
                    <td>
                        <%= form_tag guest_path(g), method: "delete" do %>
                            <%= submit_tag "Delete" %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <table class="card totals-chart">
        <thead>
            <tr>
                <th class="name-td">Meal Selection</th>
                <th class="right-align">Total</th>
            </tr>
        </thead>

        <tbody>
            <% @meals.each do |key, value|%>
                <tr>
                    <td class="name-td"><%= key %></td>
                    <td class="right-align"><%= value %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <table class="card totals-chart">
        <thead>
            <tr>
                <th class="name-td">Event</th>
                <th class="right-align">Total</th>
            </tr>
        </thead>

        <tbody>
            <% @totals.each do |key, value|%>
                <tr>
                    <td class="name-td"><%= key %></td>
                    <td class="right-align"><%= value %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>