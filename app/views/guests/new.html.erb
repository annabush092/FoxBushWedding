<div id="guests-new-container">
    
    <div class="card">

        <h1>RSVP</h1>
        <h2>Kindly reply by July Eighth, 2020</h2>

        <%= form_for @guest do |f| %>

        <%= f.label :name, "Name" %>
        <p class="label-note">Please RSVP for one person at a time. Thank you!</p>
        <%= f.text_field :name, :required => true %>

        <div class="divider-line"></div>

        <label>Ceremony and Reception</label>
        <table>
            <tr>
                <td class="radio-td selected">
                    <%= f.radio_button :attending, true, :checked => true, :value => true, class: 'radio' %>
                    <label class="checkmark">✓</label>
                    <%= f.label :attending, "Will attend", value: true %>
                </td>
        
                <td class="radio-td">
                    <%= f.radio_button :attending, false, :value => false, class: 'radio' %>
                    <label class="checkmark">✓</label>
                    <%= f.label :attending, "Unable to Attend", value: false %>
                </td>
            </tr>
        </table>

        <div class="divider-line"></div>

        <div id="meal-container">
            <%= f.label :meal, "Dinner Choice" %>
            <%= f.select :meal, [['Meat', 'meat'], ['Veggie', 'veggie'], ['Lobster', 'lobster']] %>
            <p id="meal-description"></p>

            <div class="divider-line"></div>
        </div>

        <label>Sunday Brunch</label>
        <table>
            <tr>
                <td class="radio-td selected">
                    <%= f.radio_button :brunch, true, :checked => true, :value => true, class: 'radio'  %>
                    <label class="checkmark">✓</label>
                    <%= f.label :brunch, "Will attend", value: true %>
                </td>
        
                <td class="radio-td">
                    <%= f.radio_button :brunch, false, :value => false, class: 'radio' %>
                    <label class="checkmark">✓</label>
                    <%= f.label :brunch, "Unable to Attend", value: false %>
                </td>
            </tr>
        </table>

        <div class="divider-line"></div>

        <%= f.label :notes, "Notes for the Hosts" %>
        <p class="label-note">Food requirements? Comments? Leave it all here!</p>
        <%= f.text_field :notes %>

        <%= f.submit "Send" %>

        <% end %>

    </div>
</div>

<script type="text/javascript" src="/javascripts/guests-new.js"></script>